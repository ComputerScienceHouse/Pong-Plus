package code{	import flash.display.*;	import flash.events.*;	import flash.geom.*;	public class PongBall extends MovieClip	{		var Speed:Number = 4;		var accel:Number = .5;		var maxSpeed:Number = 16;		var angleInit:int = Math.random() * 90 + 45;		var randomAdd:Number = Math.random() * 2 - 1;		var speedX:Number = Math.cos(angleInit * Math.PI / 180) * Speed + randomAdd;		var speedY:Number = Math.sin(angleInit * Math.PI / 180) * Speed + randomAdd;		var speedXInit:Number = Math.cos(angleInit * Math.PI / 180) * Speed + randomAdd;		var speedYInit:Number = Math.sin(angleInit * Math.PI / 180) * Speed + randomAdd;		var num:Number;		var direc:int;		public function PongBall(aX:Number, aY:Number)		{			this.x = aX;			this.y = aY;			this.addEventListener(Event.ENTER_FRAME, ballMove);		}		public function ballMove(e:Event)		{			y +=  speedY;			x +=  speedX;		}		public function upOrDown()		{			num = Math.random()*2 - 1;			if (num <= 0)			{				direc = 1;			}			else if (num > 0)			{				direc = -1;			}		}		public function remove()		{			if (this.parent != null)			{				angleInit = Math.random() * 90 + 45;				speedX = Math.cos(angleInit * Math.PI / 180) * Speed + randomAdd;				speedY = Math.sin(angleInit * Math.PI / 180) * Speed + randomAdd;				speedXInit = Math.cos(angleInit * Math.PI / 180) * Speed + randomAdd;				speedYInit = Math.sin(angleInit * Math.PI / 180) * Speed + randomAdd;				this.parent.removeChild(this);			}		}	}}